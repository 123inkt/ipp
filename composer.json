{
    "name": "digitalrevolution/skeleton",
    "description": "Digital Revolution skeleton package",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "7.0.* || 7.1.* || 7.2.* || 7.3.*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "7.5.*",
        "phpstan/phpstan-phpunit": "0.12.*",
        "phpstan/phpstan-symfony": "0.12.*",
        "phpstan/phpstan-strict-rules": "0.12.*",
        "phpstan/extension-installer": "1.0.*"
    },
    "scripts": {
        "check": "composer run stan:check && composer run mess:check && composer run style:check && composer run test",
        "stan:check": "phpstan analyse",
        "mess:check": "phpmd src,tests text phpmd.xml.dist --suffixes=php",
        "style:check": "phpcs src tests",
        "style:fix": "phpcbf src tests",
        "test": "phpunit",
        "test:integration": "phpunit --testsuite integration",
        "test:unit": "phpunit --testsuite unit"
    }
}
